{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/products.json", "dest": "/public/products.json" },
    { "src": "/img/(.*)", "dest": "/img/$1" },
    { "src": "/(.*\\.(?:js|css|png|jpg|jpeg|svg|ico))$", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
